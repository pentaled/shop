<%- include('header'); -%>
    <div class="row">
        <% if(products.length > 0){ %>
            <% products.forEach((item) => { %>
                <div class="col-lg-4 col-md-3 col-sm6">
                    <div class="card">
                        <img 
                        src="/assets/thumbnails/<%= item.thumbnail %>" 
                        alt="<%= item.product_name %>" 
                        width="100%"
                        height="100%"
                        class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= item.product_name %>
                            </h5>
                            <p class="card-text">
                                $ <%= Number.parseFloat(item.price).toFixed(2) %>
                            </p>
                            <a href="/cart/add/<%= item.id %>" class="btn btn-primary">Add to cart</a>
                        </div>
                    </div>
                </div>
            <% }); %>
            <% } else { %>
                <p>Error. Server error. Products cannot be displayed.</p>
                <% }; %>
    </div>
    <%- include('footer'); -%>